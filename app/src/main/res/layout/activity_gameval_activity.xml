<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GamevalACTIVITY"
    android:orientation="vertical"
    android:padding="15dp"
    android:weightSum="10"
    android:background="@color/mycolor"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2048"
            android:textStyle="bold"
            android:textSize="50sp"
            android:layout_centerInParent="true"
            android:layout_weight="2"
            android:textColor="@android:color/background_dark"

            />

        <Button
            android:id="@+id/game_activity_score"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/lila"
            android:text="SCORE\n0"
            android:textColor="@android:color/background_light"
            android:textSize="20dp"

            />
        <Button
            android:id="@+id/game_activity_best"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/lila"
            android:text="BEST"
            android:textColor="@android:color/background_light"
            android:textSize="20dp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Join the numbers and get 2048"
            android:textSize="25dp"
            android:textStyle="bold"
            android:padding="10dp"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/main_activity_restart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="RESTART"
            android:textSize="33dp"
            android:background="@color/MORADO"
            android:textColor="@android:color/background_light"
            android:textAlignment="center"
            android:layout_weight="8"
            />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:columnCount="4"
        android:rowCount="4"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="true"
        android:padding="14dp"
        android:layout_margin="2dp"
        android:background="@color/grid"

        >
    <Button
        android:id="@+id/game_0_0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="3dp"
        android:textSize="30dp"
        android:text="2"
        android:background="@color/base"
        />
    <Button
        android:id="@+id/game_0_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="3dp"
        android:textSize="30dp"
        android:background="@color/base"
        />
        <Button
            android:id="@+id/game_0_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/base"
            />
        <Button
            android:id="@+id/game_0_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/base"
            />
        <Button
            android:id="@+id/game_1_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/base"
            />
        <Button
            android:id="@+id/game_1_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/base"
            />
        <Button
            android:id="@+id/game_1_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/base"
            />
        <Button
            android:id="@+id/game_1_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/base"
            />
        <Button
            android:id="@+id/game_2_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/base"
            />
        <Button
            android:id="@+id/game_2_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/base"
            />
        <Button
            android:id="@+id/game_2_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/base"
            />
        <Button
            android:id="@+id/game_2_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/base"
            />
        <Button
            android:id="@+id/game_3_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/base"
            />
        <Button
            android:id="@+id/game_3_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/base"
            />
        <Button
            android:id="@+id/game_3_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/base"
            />
        <Button
            android:id="@+id/game_3_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/base"
            />
    </GridLayout>
</LinearLayout>